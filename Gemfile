  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier', '>= 1.0.3'
  gem 'bootstrap-sass'
end

group :development do
  gem 'better_errors'
  gem 'quiet_assets'
end

group :development, :test do
  gem 'factory_girl_rails'
  gem 'rspec-rails'
  gem 'faker'
  gem 'shoulda-matchers'
end

group :test do
  gem 'spork'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'simplecov'
  gem 'fakeweb'
  gem 'database_cleaner'
  gem 'capybara-webkit'
end
